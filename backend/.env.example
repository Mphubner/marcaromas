# .env.example - copy to .env and fill values
PORT=5001
NODE_ENV=development

# Database - Supabase PostgreSQL
# Obtenha em: Project Settings > Database > Connection string > URI
# Formato: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres
DATABASE_URL="postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Database Direct (para migrações)
# Use esta para rodar migrations (npx prisma migrate)
# Formato: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DIRECT_URL="postgresql://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Supabase
SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
SUPABASE_ANON_KEY="your-anon-public-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-secret-key"

JWT_SECRET="trocar_por_um_segredo_forte"
FRONTEND_URL="http://localhost:5174"
BACKEND_URL="http://localhost:5001"
API_URL="http://localhost:5001"

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=APP_USR-XXXXXXXXXXXX
MERCADOPAGO_PUBLIC_KEY=APP_USR-XXXXXXXXXX

# Default payment gateway: "mercadopago" or "stripe"
PAYMENT_GATEWAY=mercadopago

# SMTP (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password

# Deployment (opcional - para produção)
CUSTOM_DOMAIN=marcaromas.com.br
